
   <article class="w-full ms:w-full md:w-1/2 lg:w-2/6 px-3 mb-5 tease tease-{{post.type}} bg-black min-h-64 " id="tease-{{post.id}}">
       {% block content %}
       <div class="h-full bg-[#fff9e0] border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
           <a href="{{post.link}}">
           <img class="rounded-t-lg bg-cover bg-center h-44 w-full object-cover" src="{{ post.thumbnail.src }}" alt="" />
           <div class="p-5">
                   <h5 class="mb-2 text-2xl font-bold tracking-tight text-black dark:text-white">{{post.title}}</h5>
           </div>
               </a>
       </div>
       <a href="{{post.link}}" class="relative left-5 bottom-14 inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#ffc400] rounded-lg hover:bg-yellow-700 focus:ring-4 focus:outline-none focus:ring-yellow-300 dark:bg-yellow-600 dark:hover:bg-yellow-700 dark:focus:ring-yellow-800">
           Read more
           <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
               <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
           </svg>
       </a>
       {% endblock %}
   </article>