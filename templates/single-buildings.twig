{% extends "base.twig" %}

{% block content %}
    <div class="content-wrapper bg-cream flex justify-center items-center h-screen">
       
        <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
            <img src="{{ post.thumbnail.src|resize(500, 300) }}" class="block mx-auto">
            <section class="article-content">
                <h1 class="article-h1 text-center">{{ post.title }}</h1>

                <div class="article-body text-center">
                    {{ post.content }}

                    {# Building specific information #}
                    <h3>Risk Status</h3>
         <p>{{ post.risk_status }}</p>

        <h3>Year</h3>
                    <p>{{ post.year }}</p>
                    <h3>Location</h3>
                    <p>{{ post.location }}</p>
                    <h3>Suburb</h3>
                    <p>{{ post.suburb }}</p>

                    <h3>Architect</h3>
                    <ul>
                        {% for arch in post.architect %}
                            <li>
                                {{ arch.name }}
                            </li>
                        {% endfor %}
                    </ul>

                    {# Show a map of the location #}
                    {{ post.geolocation }}
                </div>
            </section>
        </article>
    </div>

    <div class="debug p-8 bg-debug">
        {# Debug info #}
        <h1>Debug info</h1>

        <p class="pb-4">post name: {{ post.name }}</p>

        <p>file name: single-buildings.twig</p>

        {# Output what is in the post #}
        {# {{ dump(post) }} #}
    </div>
{% endblock %}
